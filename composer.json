{
    "name": "samhwang/spongetext",
    "description": "Convert a regular string into spongetext",
    "type": "project",

    "authors": [
        {
            "name": "Sam Huynh",
            "email": "samhwang2112.dev@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "php-di/php-di": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/App"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpdbg -qrr ./vendor/bin/phpunit tests"
    }
}
